{% extends "SiteBundle:Layout:base.html.twig" %}
{% block title %}Home{% endblock %}
{% block stylesheets %}
  {{ parent() }}
        {% stylesheets 
            '@SiteBundle/Resources/public/css/shop-homepage.css' 
            filter='cssrewrite'
        %}
            <link rel="stylesheet" href="{{ asset_url }}">
        {% endstylesheets %}
    
{% endblock %}
{% block content %}
<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Bestelling aan:</legend>

	{{ form_start(form) }}
<div class="form-group">
  <label class="col-md-4 control-label" for="firstname">Firstname:*</label>  
  <div class="col-md-5">
	    {{ form_row(form.firstname) }}
  </div>
</div>
<div class="form-group">
  <label class="col-md-4 control-label" for="firstname">Lastname:*</label>  
  <div class="col-md-5">
	    {{ form_row(form.lastname) }}
  </div>
</div>
<div class="form-group">
  <label class="col-md-4 control-label" for="firstname">Address line 1:*</label>  
  <div class="col-md-5">
	    {{ form_row(form.address_line_1) }}
  </div>
</div>
<div class="form-group">
  <label class="col-md-4 control-label" for="firstname">Address line 2:*</label>  
  <div class="col-md-5">
	    {{ form_row(form.address_line_2) }}
  </div>
</div>
<div class="form-group">
  <label class="col-md-4 control-label" for="firstname">phone:*</label>  
  <div class="col-md-5">
	    {{ form_row(form.phone) }}
  </div>
</div>
<div class="form-group">
  <label class="col-md-4 control-label" for="firstname">City:*</label>  
  <div class="col-md-5">
	    {{ form_row(form.city.name) }}
  </div>
</div>
<div class="form-group">
  <label class="col-md-4 control-label" for="firstname">Zip:*</label>  
  <div class="col-md-5">
	    {{ form_row(form.city.zip) }}
  </div>
</div>
	{{ form_end(form) }}
        <ul class="record_actions">
    <li>
        <a href="{{ path('customer') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
