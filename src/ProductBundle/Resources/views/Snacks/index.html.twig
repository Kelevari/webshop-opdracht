{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Snacks list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Special</th>
                <th>Special_price</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('snacks_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.special }}</td>
                <td>{{ entity.specialprice }}</td>
                <td>{{ entity.available }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('snacks_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('snacks_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('snacks_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
