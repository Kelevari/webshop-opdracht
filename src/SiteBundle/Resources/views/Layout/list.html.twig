{% extends "SiteBundle:Layout:base.html.twig" %}
{% block title %}Home{% endblock %}
{% block stylesheets %}
	{{ parent() }}
        {% stylesheets 
            '@SiteBundle/Resources/public/css/1-col-portfolio.css' 
            filter='cssrewrite'
        %}
            <link rel="stylesheet" href="{{ asset_url }}">
        {% endstylesheets %}
    
{% endblock %}
{% block content %}
    {% for entity in entities %}
        <div class="row">
            <div class="col-md-5">
                <a href="#">
                    <img class="img-responsive" src="http://placehold.it/350x150" alt="">
                </a>
            </div>
            <div class="col-md-7">
                <table class="table table-striped">
                    <tr>
                        <td>
                            {{ entity.name }} bla bla bla
                        </td>
                        <td>
                            {{ entity.price }}
                        </td>
                    </tr>
                    {% if entity.special == 1 %}
                    <tr>
                        <td>
                            {{ entity.name }}&nbsp;Special
                        </td>
                        <td>
                            {{ entity.specialPrice }}
                        </td>
                    </tr>
                    {% endif %}
                </table>
                <a class="btn btn-primary" href="#">Add to cart <span class="glyphicon glyphicon-shopping-cart"></span></a>
            </div>
        </div>

        <hr>
    {% endfor %}
{% endblock %}
